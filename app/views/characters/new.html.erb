<%= form_with model: @character, url: { action: :create }, local: true do |f| %>
  <%= f.hidden_field :story_id, value: @story.id %>
  <%= f.label :character_name %>
  <%= f.text_field :character_name, required: true, autofocus: true, placeholder: "名前" %>
  <%= f.label :age %>
  <%= f.text_field :age, required: true, autofocus: true, placeholder: "年齢" %>
  <%= f.label :gender %>
  <%= f.text_field :gender, required: true, autofocus: true, placeholder: "性別" %>
  <%= f.submit "作成" %>
<% end %>